<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameDetail"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_game_detail">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".GameDetail"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <TextView
            android:id="@+id/labelTitle"
            android:layout_width="145dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Título"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/gameName"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:text="Título"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelTitle" />

        <TextView
            android:id="@+id/labelSummary"
            android:layout_width="145dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Descripción"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gameName" />

        <TextView
            android:id="@+id/gameSummary"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:text="Descripción"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelSummary" />

        <TextView
            android:id="@+id/labelPlatforms"
            android:layout_width="145dp"
            android:layout_height="39dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:text="Plataformas"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gameSummary" />

        <TextView
            android:id="@+id/gamePlatforms"
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="8dp"
            android:text="Plataformas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelPlatforms" />

        <TextView
            android:id="@+id/labelMoneySpent"
            android:layout_width="111dp"
            android:layout_height="38dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:text="@string/dinero_gastado"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gamePlatforms" />

        <EditText
            android:id="@+id/editMoneySpent"
            android:layout_width="73dp"
            android:layout_height="43dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="28dp"
            android:ems="10"
            android:inputType="number"
            android:text="0.0"
            app:layout_constraintStart_toEndOf="@+id/labelMoneySpent"
            app:layout_constraintTop_toBottomOf="@+id/gamePlatforms" />

        <TextView
            android:id="@+id/labelComment"
            android:layout_width="111dp"
            android:layout_height="38dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="44dp"
            android:text="Comentario:"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/labelMoneySpent" />

        <EditText
            android:id="@+id/editComment"
            android:layout_width="208dp"
            android:layout_height="54dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:inputType="text"
            android:text="Comentario"
            app:layout_constraintStart_toEndOf="@+id/labelComment"
            app:layout_constraintTop_toBottomOf="@+id/editMoneySpent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:text="Añadir Juego"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editComment" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>
